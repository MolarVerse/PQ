# Type of this run
      jobtype = qm-md;

# Number of steps to be performed and timestep in fs; nreset gives the first n steps in which the total momentum is reset
      nstep = 50000; timestep = 0.5; nreset = 5;

# Time integration algorithm
      integrator = v-verlet;

# Request computation of the stress tensor
# (important for virial calculation to the correct pressure)
      virial = atomic;

# Output frequency of ALL data files
      output_freq = 2;

# Temperature algorithm (velocity rescaling), Target T in K and Relaxation time in ps
      thermostat = velocity_rescaling; temp = 298.15; t_relaxation = 0.1;

# Pressure coupling algorithm (Berendsen weak coupling), Target p in bar and Relaxation time in ps
     manostat = berendsen; pressure = 1.013; p_relaxation = 5.0;
      
      isotropy = isotropic;
# Mace Calculation Setup Keywords
      qm_prog = fairchem;
      fairchem_model_name = DimeNet++-S2EF-ODAC;
      #mace_model_size = medium;
      #dispersion = true;
      #floating_point_type = float;


# Files
      start_file    = zif8.rst;

      file_prefix   = zif8-01;

